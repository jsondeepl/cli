{
  "name": "@jsondeepl/cli",
  "version": "0.0.2",
  "description": "A CLI tool to translate JSON files using JsonDeepL API",
  "repository": "jsondeepl/cli",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": {
    "jsondeepl": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "vitest dev",
    "lint": "eslint .",
    "lint:fix": "automd && eslint . --fix",
    "prepack": "npm run build",
    "release": "npm run test && npx changelogen@latest --release --patch && npm publish && git push --follow-tags",
    "test": "npm run lint && npm run test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "automd": "^0.4.2",
    "changelogen": "^0.6.2",
    "eslint": "^9.37.0",
    "obuild": "^0.2.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
